{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://intelligent-investor.io/schemas/concept.schema.json",
  "title": "Concept Schema",
  "description": "Schema for trading and finance concept definitions in the Knowledge Base",
  "type": "object",
  "required": ["id", "name", "domain", "definition", "status"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^concept_\\d{2}_[a-z0-9_]+$",
      "description": "Unique concept ID with domain prefix: concept_01_bid_ask_spread",
      "examples": ["concept_01_bid_ask_spread", "concept_07_position_sizing"]
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable concept name"
    },
    "domain": {
      "type": "integer",
      "minimum": 1,
      "maximum": 9,
      "description": "Primary domain number (1-9) this concept belongs to"
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Alternative names or acronyms for this concept"
    },
    "definition": {
      "type": "string",
      "minLength": 10,
      "description": "Precise, single-sentence definition of the concept"
    },
    "description": {
      "type": "string",
      "minLength": 50,
      "description": "Detailed explanation (2-5 paragraphs) with context and applications"
    },
    "mathematical_formulation": {
      "type": "string",
      "description": "Mathematical representation (LaTeX or plaintext) if applicable"
    },
    "related_concepts": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^concept_\\d{2}_[a-z0-9_]+$"
      },
      "description": "Concept IDs of related concepts"
    },
    "references": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["publication_id"],
        "properties": {
          "publication_id": {
            "type": "string",
            "pattern": "^pub_[a-z0-9_]+$",
            "description": "ID of the publication that discusses this concept"
          },
          "section": {
            "type": "string",
            "description": "Chapter or section reference"
          },
          "page_numbers": {
            "type": "string",
            "description": "Page range (e.g., '45-52')"
          },
          "relevance": {
            "type": "string",
            "enum": ["primary", "secondary", "supplementary"],
            "description": "How central this reference is to understanding the concept"
          }
        }
      },
      "description": "Publications that discuss this concept"
    },
    "implementation_notes": {
      "type": "string",
      "description": "How this concept maps to code, system design, or practical application"
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["scenario"],
        "properties": {
          "scenario": {
            "type": "string",
            "description": "Description of the example scenario"
          },
          "calculation": {
            "type": "string",
            "description": "Step-by-step calculation or process"
          },
          "result": {
            "type": "string",
            "description": "Expected outcome or interpretation"
          }
        }
      },
      "description": "Concrete examples demonstrating the concept"
    },
    "common_misconceptions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Frequently misunderstood aspects of this concept"
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^concept_\\d{2}_[a-z0-9_]+$"
      },
      "description": "Concepts that should be understood before this one"
    },
    "applications": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Practical use cases or applications of this concept"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "reviewed", "published", "deprecated"],
      "description": "Current review status of this concept document"
    },
    "version": {
      "type": "string",
      "pattern": "^v\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of this concept",
      "default": "v1.0.0"
    },
    "created_date": {
      "type": "string",
      "format": "date-time",
      "description": "When this concept was first documented"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "Last modification timestamp"
    },
    "author": {
      "type": "string",
      "description": "Who documented this concept"
    }
  },
  "additionalProperties": false
}
